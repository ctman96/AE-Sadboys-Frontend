{{#paper-card as |card|}}
  {{#card.title as |title|}}
    {{#title.text as |text|}}
      {{#text.headline}}
        {{color.key}}
        {{#paper-button onClick=(action 'edit')}}{{paper-icon "mode edit"}}Edit{{/paper-button}}
      {{/text.headline}}
    {{/title.text}}
  {{/card.title}}
  {{#card.content}}

    {{#if edit}}
      {{#paper-form onSubmit="submit" as |form|}}
        {{form.input label="New color key" value=newKey onChange=(action (mut newKey))}}
        #{{color.color}}
        {{spectrum-color-picker color=color.color preferredFormat="hex"}}
        <br>
        {{#form.submit-button raised=true primary=true}}
          Save
        {{/form.submit-button}}
        {{#paper-button onClick=(action 'edit')}}Cancel{{/paper-button}}
        <br><br>
        {{#paper-button warn=true}}{{paper-icon "delete"}}Delete Color{{/paper-button}}
      {{/paper-form}}

    {{else}}
      #{{color.color}}
      {{spectrum-color-picker color=color.color preferredFormat="hex" disabled=true}}
    {{/if}}
  {{/card.content}}
{{/paper-card}}

{{yield}}
