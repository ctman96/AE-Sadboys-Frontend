{{#paper-card as |card|}}
  {{#card.title as |title|}}
    {{#title.text as |text|}}
      {{#text.headline}}
        {{classhierarchy.parent.name}} > {{classhierarchy.child.name}}
        {{#paper-button onClick=(action 'edit')}}{{paper-icon "mode edit"}}Edit{{/paper-button}}
      {{/text.headline}}
    {{/title.text}}
  {{/card.title}}
  {{#card.content}}

    {{#if edit}}
      {{#paper-form onSubmit=(action "update") as |form|}}
        {{form.input label="New parent name" value=classhierarchy.parent.id onChange=(action (mut classhierarchy.parent.id))}}
        {{form.input label="New relationship number" value=classhierarchy.rel onChange=(action (mut classhierarchy.rel))}}
        {{form.input label="New child name" value=classhierarchy.child.id onChange=(action (mut classhierarchy.child.id))}}
        <br>
        {{#form.submit-button raised=true primary=true disabled=form.isInvalid}}
          Submit
        {{/form.submit-button}}
        {{#paper-button}}Cancel{{/paper-button}}
        <br><br>
        {{#paper-button warn=true onClick=(action "delete")}}{{paper-icon "delete"}}Delete Role{{/paper-button}}

      {{/paper-form}}

    {{else}}
      Parent:
      {{classhierarchy.parent.id}}
      <br>
      Relationship number: {{classhierarchy.rel}}
      <br>
      Child:
      {{classhierarchy.child.id}}
    {{/if}}

  {{/card.content}}
{{/paper-card}}
{{yield}}
