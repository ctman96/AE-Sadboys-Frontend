<div>
{{#paper-toolbar tall=true as |toolbar| }}
  <div class="layout-row">
    <div class="flex-shrink" style="width:400px;">
      <img src="/img/img_IPFMS.png" style="width:100%;max-width:100%;max-height:100%;">
    </div>
    <div class="layout-column flex">
      <div class="flex">
        <span class="flex"></span>
        <p>Logged in as XYZ</p>
      </div>
      <div class="flex">
        {{#toolbar.tools}}
          {{#paper-button raised=true href="/"}}
            {{paper-icon "home"}}
            Home
          {{/paper-button}}
          {{#paper-button raised=true href="/config"}}
            {{paper-icon "settings"}}
            Configuration
          {{/paper-button}}
          {{#paper-button raised=true href="/print"}}
            {{paper-icon "print"}}
            Print
          {{/paper-button}}
          <span class="flex"></span>
          {{#paper-button mini=true href="/search"}}
            {{paper-icon "search"}}
          {{/paper-button}}
        {{/toolbar.tools}}
      </div>
    </div>
  </div>
{{/paper-toolbar}}
</div>
<div style="width:100%;height:100%">
  {{outlet}}
</div>
