  {{#paper-sidenav-container style="height:100%; overflow:hidden;" class="site-nav-container"}}
    {{#paper-sidenav
      class="md-whiteframe-z2 site-sidenav"
      name="default"}}
      {{#paper-toolbar }}
        <div class="md-toolbar-tools">
          <img src="/img/aelogo.png" height="50">&nbsp;&nbsp;<strong>IPFMS</strong>
        </div>
      {{/paper-toolbar}}
      {{#paper-content padding=true}}
        {{#paper-list}}
          {{#paper-item action="transitionTo"  href=(href-to "home") param="home"}}
            {{paper-icon icon="home" size="lg"}}
            Home
          {{/paper-item}}
          {{#paper-item action="transitionTo"  href=(href-to "search") param="search"}}
            {{paper-icon icon="search" size="lg"}}
            Search
          {{/paper-item}}

          {{#if session.isAuthenticated }}

          {{#if (or (eq session.data.authenticated.rmc true) (eq session.data.authenticated.admin true))}}
          {{#paper-item action="transitionTo"  href=(href-to "print.record") param="print"}}
            {{paper-icon icon="print" size="lg"}}
            Print
          {{/paper-item}}
          {{/if}}

          {{#if session.data.authenticated.admin}}
          {{#paper-item action="transitionTo"  href=(href-to "config.user") param="config"}}
            {{paper-icon icon="build" size="lg"}}
            Configuration
          {{/paper-item}}
          {{/if}}

          {{/if}}

        {{/paper-list}}
      {{/paper-content}}
    {{/paper-sidenav}}

    {{#paper-content class="flex layout-column" style="overflow:hidden;"}}
      {{outlet}}
    {{/paper-content}}
  {{/paper-sidenav-container}}

  {{paper-toaster parent="#main"}}
