{{#paper-card as |card|}}
  {{#card.title as |title|}}
    {{#title.text as |text|}}
      {{#text.headline}}Add color{{/text.headline}}
    {{/title.text}}
  {{/card.title}}
  {{#card.content}}
    {{#paper-form onSubmit="submit" as |form|}}
      {{form.input label="Character" value=key onChange=(action (mut key)) maxlength=2 minlength=1 required=true}}
      {{form.input label="Color" value=newColor onChange=(action (mut newColor)) maxlength=6 minlenght=6 required=true}}
      {{spectrum-color-picker color=newColor preferredFormat="hex"}}
      {{#form.submit-button raised=true primary=true disabled=form.isInvalid}}
        Submit
      {{/form.submit-button}}
    {{/paper-form}}
  {{/card.content}}
{{/paper-card}}

{{#each colortable as |color|}}
  {{listof-color color=color}}
{{/each}}

{{outlet}}
