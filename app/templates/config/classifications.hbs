{{#paper-card as |card|}}
  {{#card.title as |title|}}
    {{#title.text as |text|}}
      {{#text.headline}}Add Classification{{/text.headline}}
    {{/title.text}}
  {{/card.title}}
  {{#card.content}}
    {{#paper-form onSubmit=(action "create") as |form|}}
      <div>
        {{form.input label="Name" value=name onChange=(action (mut name)) required=true}}
        {{#paper-checkbox checked=keyword value=keyword onChange=(action (mut keyword))}}
          Keyword?
        {{/paper-checkbox}}
        {{#form.submit-button raised=true primary=true disabled=form.isInvalid}}
          Submit
        {{/form.submit-button}}
      </div>
    {{/paper-form}}
  {{/card.content}}
{{/paper-card}}

<div class="layout-row layout-wrap">
  {{#each model as |classification|}}
    <div class="layout-column flex-xs flex-gt-xs-50">
      {{listof-classification classification=classification}}
    </div>
  {{/each}}
</div>

{{outlet}}
